@model IEnumerable<CenterManager.Models.student>

@{
    ViewBag.Title = "Student";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-3.4.1.js"></script>


</head>
<h2>Student</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!-- Modal -->
<div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><b>THÊM HỌC VIÊN</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Id học viên</label>
                        <input type="text" class="form-control" id="student_id" aria-describedby="emailHelp" placeholder="Nhập id học viên">
                    </div>
                    <div class="form-group">
                        <label>Tên học viên</label>
                        <input type="text" class="form-control" id="student_name" placeholder="nhập tên học viên">
                    </div>
                    <div class="form-group">
                        <label>Năm sinh học viên</label>
                        <input type="text" class="form-control" id="student_birthYear" placeholder="nhập năm sinh học viên">

                    </div>

                    <div id="edit-error"></div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="CreateStudent" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit dialog -->
<div class="modal fade" id="confirm-edit">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Cập nhật học viên: </strong><strong id="student-to-edit"></strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form edit subject-->
                <div class="form-group">
                    <label for="edit-student-name">Tên học viên</label>
                    <input type="text" id="edit-student-name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="edit-student-year">Năm sinh học viên</label>
                    <input type="text" id="edit-student-year" class="form-control" />
                </div>

                <div id="edit-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="student-to-edit-input">Lưu</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="text-center text-success text-uppercase"><strong>Danh sách môn học</strong></h2>
        <div class="text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateModal">
                Thêm học viên
            </button>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Id học viên </th>
                    <th class="text-center">Tên học viên </th>
                    <th class="text-center">Năm sinh </th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody id="bodyTable">
            </tbody>
        </table>
    </div>
</div>


<!-- Delete dialog -->
<div class="modal fade" id="confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><strong>Xóa học viên</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                Bạn có chắc rằng muốn xóa học viên <strong id="student-to-delete"></strong>
            </div>
            <div id="delete-error"></div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="student-to-delete-input">Xóa</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        fetch("https://localhost:44368/api/Student", {
            method: "GET",
            headers: {
                'content-type': 'application/json'
            },
        })
            .then(res => res.json())
            .then(data => {
                for (var i = 0; i < data.length; i++) {
                    console.log(data[i].student_id)
                    var htmlLoad = $(
                        `<tr id = ${data[i].student_id}>
                            <td class ="index">${data[i].id}</td>
                            <td>${data[i].student_id}</td>
                            <td>${data[i].name}</td>
                            <td>${data[i].birthYear}</td>
                            <td> <a href="#" onclick="DeleteDialog('${data[i].student_id}','${data[i].name}')" class="text-danger" data-toggle="modal" onclick="DeleteDialog(this)" data-target="#confirm-delete">xóa</a>
                                |
                                <a href="#" data-toggle="modal" onclick="UpdateDialog('${data[i].student_id}','${data[i].name}', '${data[i].birthYear}')" data-target="#confirm-edit">sửa</a></td>
                        </tr>`
                    )
                    $("#bodyTable").append(htmlLoad)
                }

            })

        $("#CreateStudent").click(e => {

         
            var student_id = $("#student_id").val()
            var student_name = $("#student_name").val()
            var student_birthYear = $("#student_birthYear").val()
            //console.log(student_id, student_name, student_birthYear)
            var data = {
                "student_id": student_id,
                "name": student_name,
                "birthYear": student_birthYear
            }
            fetch("https://localhost:44368/api/Student", {
                method: "POST",
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify(data),

            })
                .then(res =>
                    res.json()
                )
                .then(data => {
                    console.log(data.code, data.message)
                    if (data.code === 400) {

                        $("#edit-error").empty();
                        $("#edit-error").append(`<div class="alert alert-danger" style="margin-top:5px; padding:10px">Lỗi: ${data.message}</div>`);
                    }
                    else {

                        var row = $(
                            `<tr  id = ${data.student_id}>
                                    <td class ="index">${data.id}</td>
                                   <td>${data.student_id}</td>
                                   <td>${data.name}</td>
                                 <td>${data.year}</td>
                                <td> <a href="#"  onclick="DeleteDialog('${data.student_id}','${data.name}')" class="text-danger" data-toggle="modal" onclick="DeleteDialog(this)" data-target="#confirm-delete">xóa</a>
                                |
                                <a href="#" data-toggle="modal" onclick="UpdateDialog('${data.student_id}','${data.name}', '${data.year}')" data-target="#confirm-edit">sửa</a>
                               </td>
                             </tr>`
                        )
                        $("#bodyTable").append(row)
                        window.$("#CreateModal").modal("hide");
                        $("#student_id").val("")
                        $("#student_name").val("")
                        $("#student_birthYear").val("")
                    }
                })
  
        })
    


    })
</script>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Student.js")"></script>
}

</html>
