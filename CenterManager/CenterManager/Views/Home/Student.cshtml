@model IEnumerable<CenterManager.Models.student>

@{
    ViewBag.Title = "Student";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-3.4.1.js"></script>


</head>
<h2>Student</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!-- Modal -->
<div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><b>THÊM HỌC VIÊN</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Id học viên</label>
                        <input type="text" class="form-control" id="student_id" aria-describedby="emailHelp" placeholder="Nhập id học viên">
                    </div>
                    <div class="form-group">
                        <label>Tên học viên</label>
                        <input type="text" class="form-control" id="student_name" placeholder="nhập tên học viên">
                    </div>
                    <div class="form-group">
                        <label>Năm sinh học viên</label>
                        <input type="text" class="form-control" id="student_birthYear" placeholder="nhập năm sinh học viên">

                    </div>
                    <div id ="errMess" class="alert alert-danger">
 
                    </div>
                </form>
              
            </div>
            <div class="modal-footer">
                <button type="button"  class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id ="CreateStudent" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="text-center text-success text-uppercase"><strong>Danh sách môn học</strong></h2>
        <div class="text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateModal">
                Thêm học viên
            </button>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Id học viên </th>
                    <th class="text-center">Tên học viên </th>
                    <th class="text-center">Năm sinh </th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody id="bodyTable">

                

            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {

        fetch("https://localhost:44368/api/Student", {
            method: "GET",
            headers: {
                'content-type': 'application/json'
            },
        })
            .then(res => res.json())
            .then(data => {
                for (var i = 0; i < data.length; i++) {
                    console.log(data[i].student_id)
                    var htmlLoad = $(
                        `<tr>
                                    <td>${data[i].id}</td>
                                   <td>${data[i].student_id}</td>
                                   <td>${data[i].name}</td>
                                 <td>${data[i].birthYear}</td>
                                 <td>${data[i].birthYear}</td>
                             </tr>`
                    )
                    $("#bodyTable").append(htmlLoad)
                }

            })

        $("#CreateStudent").click(e => {
          
            window.$("#CreateModal").modal("hide");
            var student_id = $("#student_id").val()
            var student_name = $("#student_name").val()
            var student_birthYear = $("#student_birthYear").val()
            //console.log(student_id, student_name, student_birthYear)
            var data = {
                "student_id": student_id,
                "name": student_name,
                "birthYear": student_birthYear
            }
            fetch("https://localhost:44368/api/Student", {
                method: "POST",
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify(data),

            })
                .then(res => 
                    res.json()
                )
                .then(data => {
                    console.log(data.code, data.message)
                    if (data.code === 400) {
              
                        $("#errMess").text(data.message)
                    }
                    else {
                  
                        var row = $(
                            `<tr>
                                    <td>${data.id}</td>
                                   <td>${data.student_id}</td>
                                   <td>${data.name}</td>
                                 <td>${data.year}</td>
                                 <td>${data.year}</td>
                             </tr>`
                        )
                        $("#bodyTable").append(row)
                    }
                })
     
        })
    })
</script>
</html>