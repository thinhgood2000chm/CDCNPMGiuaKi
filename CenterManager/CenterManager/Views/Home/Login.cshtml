
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<body>
    <div class="container">
        <div class="col-sm-4"></div>
        <div class="col-sm-4" style="background-color:lavenderblush;">
            <form id="login-form" class="form">
                <h3 class="text-center text-info">ĐĂNG NHẬP</h3>
                <div class="form-group">
                    <label for="username" class="text-info">Tài khoản:</label><br>
                    <input type="text" name="username" id="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password" class="text-info">Mật khẩu:</label><br>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div id="login-error"></div>
                <div class="form-group text-center">
                    <input type="button" name="submit" id="btnSubmit" class="btn btn-info" value="Đăng nhập">
                </div>
                <div id="register-link" class="text-right">
                    <a href="/Home/Register" class="text-info">Đăng ký</a>
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>


    </div>

</body>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/LoginRegis.js")"></script>
}