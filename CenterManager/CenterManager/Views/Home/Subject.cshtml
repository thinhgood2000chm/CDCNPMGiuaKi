
@{
    ViewBag.Title = "Subjects";
}
<div class="row">
    <h2 class="text-center text-success text-uppercase"><strong>Danh sách môn học</strong></h2>
    <!--Search bar-->
    <div class="text-center">
        <input type="text" placeholder="Tìm môn học..." name="search" style="padding:5px">
        <button class="btn btn-success">Tìm</button>
    </div>   

    <!--Button add subject-->
    <div class="text-right">
        <button class="btn btn-primary" data-toggle="modal" data-target="#confirm-add">Tạo môn học</button>
    </div>

    <!--Subject list-->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th>Mã môn học</th>
                <th>Môn học</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            <!--use jquery to load data-->
        </tbody>
    </table>
</div>


<!-- Add dialog -->
<div class="modal fade" id="confirm-add">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Tạo môn học</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form add subject-->
                <div class="form-group">
                    <label for="add-subject-id">Mã môn học</label>
                    <input type="text" placeholder="Nhập mã môn học" id="add-subject-id" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="add-subject-name">Tên môn học</label>
                    <input type="text" placeholder="Nhập mã môn học" id="add-subject-name" class="form-control" />
                </div>

                <div id="add-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="addSubject()">Tạo</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit dialog -->
<div class="modal fade" id="confirm-edit">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Cập nhật môn học: </strong><strong id="subject-to-edit"></strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form edit subject-->
                <div class="form-group">
                    <label for="edit-subject-name">Tên môn học</label>
                    <input type="text" id="edit-subject-name" class="form-control" />
                </div>

                <div id="edit-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="subject-to-edit-input" onclick="editSubject()">Lưu</button>
            </div>
        </div>
    </div>
</div>


<!-- Delete dialog -->
<div class="modal fade" id="confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><strong>Xóa môn học</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                Bạn có chắc rằng muốn xóa môn <strong id="subject-to-delete"></strong>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteSubject()" id="subject-to-delete-input">Xóa</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquerySubject.js")"></script>
}
