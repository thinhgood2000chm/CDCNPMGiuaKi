
@{
    ViewBag.Title = "Teacher";
}

<!-- Modal -->
<div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><b>THÊM GIÁO VIÊN</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Id giáo viên viên</label>
                        <input type="text" class="form-control" id="teacher_id" aria-describedby="emailHelp" placeholder="Nhập id học viên">
                    </div>
                    <div class="form-group">
                        <label>Tên giáo viên viên</label>
                        <input type="text" class="form-control" id="teacher_name" placeholder="nhập tên học viên">
                    </div>

                    <div id="add-error"></div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="CreateTeacher" class="btn btn-primary">LƯU</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit dialog -->
<div class="modal fade" id="confirm-edit">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Cập nhật giáo viên: </strong><strong id="teacher-to-edit"></strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form edit subject-->
                <div class="form-group">
                    <label for="edit-student-name">Tên giáo viên</label>
                    <input type="text" id="edit-teacher-name" class="form-control" />
                </div>
                <div id="edit-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="teacher-to-edit-input">Lưu</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="text-center text-success text-uppercase"><strong>Danh sách giáo viên</strong></h2>
        <div class="text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateModal">
                Thêm giáo viên
            </button>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Id giáo viên </th>
                    <th class="text-center">Tên giáo viên </th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody id="bodyTable">
            </tbody>
        </table>
    </div>
</div>


<!-- Delete dialog -->
<div class="modal fade" id="confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><strong>Xóa giáo viên</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                Bạn có chắc rằng muốn xóa giáo viên <strong id="teacher-to-delete"></strong>
            </div>
            <div id="delete-error"></div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="teacher-to-delete-input">Xóa</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Teacher.js")"></script>
}
