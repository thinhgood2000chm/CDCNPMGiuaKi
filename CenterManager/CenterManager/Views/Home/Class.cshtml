
@{
    ViewBag.Title = "Classes";
}
<div class="row">
    <h2 class="text-center text-success text-uppercase"><strong>Danh sách lớp học</strong></h2>
    <!--Search bar-->
    <div class="text-center">
        <input id="searchInput" type="text" placeholder="Tìm lớp học..." name="search" style="padding:5px">
        <button class="btn btn-success">Tìm</button>
    </div>

    <!--Button add class-->
    <div class="text-right">
        <button class="btn btn-primary" data-toggle="modal" data-target="#confirm-add">Tạo lớp học</button>
    </div>

    <!--Class list-->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th>Mã lớp học</th>
                <th>Tên lớp học</th>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Mã giáo viên</th>
                <th>Tên giáo viên</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            <!--use jquery to load data-->
        </tbody>
    </table>
    <!--Paging-->
    <div class="text-center">
        <ul id="paging" class="pagination">
            <!--use jquery to load data-->
        </ul>
    </div>
</div>


<!-- Add dialog -->
<div class="modal fade" id="confirm-add">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Tạo lớp học</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form add class-->
                <div class="form-group">
                    <label for="add-class-id">Mã lớp học</label>
                    <input type="text" placeholder="Nhập mã lớp học" id="add-class-id" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="add-class-name">Tên lớp học</label>
                    <input type="text" placeholder="Nhập mã lớp học" id="add-class-name" class="form-control" />
                </div>
                <!--TODO: Option choose class id-->
                <div class="form-group">
                    <label for="edit-class-name">Mã môn học</label>
                    <input type="text" placeholder="Nhập mã môn học" id="add-subject-id" class="form-control" />
                </div>
                <!--TODO: Option choose teacher id-->
                <div class="form-group">
                    <label for="edit-class-name">Mã giáo viên</label>
                    <input type="text" placeholder="Nhập mã giáo viên" id="add-teacher-id" class="form-control" />
                </div>

                <div id="add-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="addClass()">Tạo</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit dialog -->
<div class="modal fade" id="confirm-edit">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Cập nhật lớp học: </strong><strong id="class-to-edit"></strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form edit class-->
                <div class="form-group">
                    <label for="edit-class-name">Tên lớp học</label>
                    <input type="text" id="edit-class-name" class="form-control" />
                </div>
                <!--TODO: Option choose class id-->
                <div class="form-group">
                    <label for="edit-class-name">Mã môn học</label>
                    <input type="text" id="edit-subject-id" class="form-control" />
                </div>
                <!--TODO: Option choose teacher id-->
                <div class="form-group">
                    <label for="edit-class-name">Mã giáo viên</label>
                    <input type="text" id="edit-teacher-id" class="form-control" />
                </div>

                <div id="edit-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="class-to-edit-input" onclick="editClass()">Lưu</button>
            </div>
        </div>
    </div>
</div>


<!-- Delete dialog -->
<div class="modal fade" id="confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><strong>Xóa lớp học</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                Bạn có chắc rằng muốn xóa lớp <strong id="class-to-delete"></strong>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteSubject()" id="class-to-delete-input">Xóa</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/jqueryClass.js")"></script>
}
