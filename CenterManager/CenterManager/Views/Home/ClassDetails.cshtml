@{
    ViewBag.Title = "Class Details";
}
<div class="row">
    <h2 class="text-center text-success text-uppercase"><strong>Danh sách học viên</strong></h2>
    <h3 class="text-center text-info text-uppercase"><strong id="class-id-name">Mã lớp - Tên lớp</strong></h3>
    <!--Search bar-->
    <br>
    <div class="text-center">
        <input id="searchInput" type="text" placeholder="Tìm học viên..." name="search" style="padding:5px">
        <button class="btn btn-success">Tìm</button>
    </div>

    <!--Button add class-->
    <div class="text-right">
        <button class="btn btn-primary" data-toggle="modal" data-target="#confirm-add">Thêm học viên</button>
    </div>

    <!--Class list-->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th>Mã học viên</th>
                <th>Tên học viên</th>
                <th>Năm sinh học viên</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            <!--use jquery to load data-->
        </tbody>
    </table>
    <!--Paging-->
    <div class="text-center">
        <ul id="paging" class="pagination">
            <!--use jquery to load data-->
        </ul>
    </div>
</div>


<!-- Add dialog -->
<div class="modal fade" id="confirm-add">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><strong>Thêm học viên</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!--Form add class-->
                <div class="form-group">
                    <label for="add-class-id">Mã học viên</label>
                    <input type="text" placeholder="Nhập mã học viên" id="add-student-id" class="form-control" />
                </div>

                <div id="add-error"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="addStudent()">Tạo</button>
            </div>
        </div>
    </div>
</div>


<!-- Delete dialog -->
<div class="modal fade" id="confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><strong>Xóa học viên</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                Bạn có chắc rằng muốn xóa học viên <strong id="class-to-delete"></strong> khởi lớp học này?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteClassDetails()" id="class-to-delete-input">Xóa</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/jqueryClassDetails.js")"></script>
}